<center><h2>Discover Movies</h2></center>
for <%=@user.name%>

<%=button_to "Find Top Rated Movies", "/users/#{@user.id}/movies", method: :get, params: {q: :top_20rated}%> 


<%=form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |form| %>
  <%= form.label :keyword, "Find Movies"%>
  <%= form.text_field :keyword%>
  <%= form.submit "Submit"%>
<%end%>